{
    "workbench.startupEditor": "none",
    "files.autoSave": "afterDelay",
    "explorer.compactFolders": false,
    "workbench.productIconTheme": "icons-carbon",
    "workbench.colorTheme": "Vitesse Dark Soft",
    "workbench.sideBar.location": "right",
    "editor.inlineSuggest.enabled": true,
    "editor.fontFamily": "DejaVuSansMono NF,Consolas, 'Courier New', monospace",
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.fontSize": 13.5,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.fontFamily": "DejaVuSansMono NF,Consolas,'Courier New', monospace",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 4,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoLogo"],
            "env": {
                "TERM": "xterm"
            },
            "title": "PowerShell",
            "cwd": "${workspaceRoot}",
            "background": "#1E1F29"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        },
        "Windows PowerShell": {
            "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "args": ["-NoLogo"]
        },
        "JavaScript Debug Terminal": {
            "extensionIdentifier": "ms-vscode.js-debug",
            "icon": "debug",
            "id": "extension.js-debug.debugTerminal",
            "title": "JavaScript Debug Terminal"
        }
    },
    "prettier.embeddedLanguageFormatting": "off",
    "prettier.jsxBracketSameLine": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    }
}
